//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
struct SM1ParameterModifier
{
	float _MultParam = 1;
	float _AddParam = 0;
};

struct SShellStatsModifier
{
	SM1ParameterModifier _damage;
	SM1ParameterModifier _piercing;
};

struct SWeaponStatsModifier
{
	SM1ParameterModifier _range;
	SShellStatsModifier _shells[];
};

struct SPlatformWeaponsStatsModifier
{
	SWeaponStatsModifier _Guns[];
};

struct SWeaponsStatsModifier
{
	SPlatformWeaponsStatsModifier _Platforms[];
};

[typeID = 0x3016A480]
[noKey] class SM1UnitStatsModifier
{
	SWeaponsStatsModifier _weapons;
	SM1ParameterModifier _sightRange;
	SM1ParameterModifier _speed;
	SM1ParameterModifier _rotateSpeed;
};
