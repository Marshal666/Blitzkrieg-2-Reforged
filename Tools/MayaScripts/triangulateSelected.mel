global proc triangulateSelected()
{
     // Remember selection
     string $save[] = `ls -sl`;

     string $list[] = `ls -sl -typ mesh -dag -ni`;

     for ($item in $list)
	{
          int $i[] = `polyEvaluate -f $item`;
          $i[0]-=1;
          eval("polyTriangulate -ch 1 "+$item+".f[0:"+$i[0]+"]");
     }

     // Restore selection
     select -cl;
     for($item in $save)
          select -add $item;
}

